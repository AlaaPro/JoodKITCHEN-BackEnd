<script>
// Initialize AdminProfile Manager when page loads
document.addEventListener('DOMContentLoaded', function() {
    // Initialize the AdminProfile CRUD manager
    window.adminProfileManager = new AdminProfileManager();
    
    console.log('AdminProfile CRUD Manager initialized');
    
    // Update stats display
    adminProfileManager.updateStats({
        total: 4,
        super_admins: 1,
        active: 3,
        suspended: 1
    });
    
    // Connect header buttons to CRUD operations
    // Note: AdminProfileManager already handles this button click
    
    document.getElementById('managePermissionsBtn').addEventListener('click', () => {
        alert('Gestion des permissions bientôt disponible');
    });
    
    document.getElementById('exportAdminsBtn').addEventListener('click', () => {
        alert('Export des administrateurs bientôt disponible');
    });
    
    // Connect search and filters
    document.getElementById('adminSearchInput').addEventListener('input', (e) => {
        adminProfileManager.filterAdmins({
            search: e.target.value,
            role: document.getElementById('roleFilter').value,
            status: document.getElementById('statusFilter').value
        });
    });
    
    document.getElementById('roleFilter').addEventListener('change', (e) => {
        adminProfileManager.filterAdmins({
            search: document.getElementById('adminSearchInput').value,
            role: e.target.value,
            status: document.getElementById('statusFilter').value
        });
    });
    
    document.getElementById('statusFilter').addEventListener('change', (e) => {
        adminProfileManager.filterAdmins({
            search: document.getElementById('adminSearchInput').value,
            role: document.getElementById('roleFilter').value,
            status: e.target.value
        });
    });
    
    document.getElementById('resetFiltersBtn').addEventListener('click', () => {
        document.getElementById('adminSearchInput').value = '';
        document.getElementById('roleFilter').value = '';
        document.getElementById('statusFilter').value = '';
        adminProfileManager.loadAdminProfiles();
    });
    
    // Connect select all checkbox
    document.getElementById('selectAllAdmins').addEventListener('change', (e) => {
        const checkboxes = document.querySelectorAll('.admin-select-checkbox');
        checkboxes.forEach(cb => cb.checked = e.target.checked);
    });
    
    // Connect table action buttons using event delegation
    document.addEventListener('click', function(e) {
        const target = e.target.closest('button');
        if (!target) return;
        
        const adminId = target.getAttribute('data-id');
        if (!adminId) return;
        
        if (target.classList.contains('admin-view-btn')) {
            alert(`Affichage des détails de l'administrateur ID: ${adminId}`);
        } else if (target.classList.contains('admin-edit-btn')) {
            alert(`Modification de l'administrateur ID: ${adminId}`);
        } else if (target.classList.contains('admin-permissions-btn')) {
            alert(`Gestion des permissions pour l'administrateur ID: ${adminId}`);
        } else if (target.classList.contains('admin-suspend-btn')) {
            if (confirm(`Voulez-vous vraiment suspendre cet administrateur?`)) {
                alert(`Administrateur ${adminId} suspendu avec succès`);
            }
        } else if (target.classList.contains('admin-reactivate-btn')) {
            if (confirm(`Voulez-vous vraiment réactiver cet administrateur?`)) {
                alert(`Administrateur ${adminId} réactivé avec succès`);
            }
        } else if (target.classList.contains('admin-delete-btn')) {
            if (confirm(`Voulez-vous vraiment supprimer définitivement cet administrateur?`)) {
                alert(`Administrateur ${adminId} supprimé avec succès`);
            }
        }
    });
    
    // Initial load of admin profiles from API
    // adminProfileManager.loadAdminProfiles(); // Temporarily disabled - API issues
    console.log('AdminProfile manager initialized - using static data for now');
    
    // Removed simple modal - using comprehensive AdminProfileManager modal instead
});
</script>

