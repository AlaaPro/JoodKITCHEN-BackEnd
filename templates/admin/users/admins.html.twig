<script>
document.addEventListener('DOMContentLoaded', function() {
    // Admin creation form
    document.querySelector('#addAdminModal .btn-primary').addEventListener('click', function() {
        const form = document.getElementById('addAdminForm');
        const formData = new FormData(form);
        
        // Show loading state
        this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Création...';
        this.disabled = true;
        
        // Simulate admin creation
        setTimeout(() => {
            this.innerHTML = '<i class="fas fa-check"></i> Administrateur créé!';
            setTimeout(() => {
                bootstrap.Modal.getInstance(document.getElementById('addAdminModal')).hide();
                this.innerHTML = '<i class="fas fa-save"></i> Créer l\'administrateur';
                this.disabled = false;
                form.reset();
                
                // Show success notification
                showNotification('Administrateur créé avec succès! Un email d\'invitation a été envoyé.', 'success');
            }, 1500);
        }, 2000);
    });
    
    function showNotification(message, type) {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type} position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 350px;';
        toast.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                ${message}
                <button type="button" class="btn-close ms-auto" onclick="this.parentElement.parentElement.remove()"></button>
            </div>
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => {
            if (toast.parentElement) {
                toast.remove();
            }
        }, 7000);
    }
});
</script>
