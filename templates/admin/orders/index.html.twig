{% extends 'admin/base.html.twig' %}

{% block title %}Commandes - JoodKitchen Admin{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
<li class="breadcrumb-item active">Commandes</li>
{% endblock %}

{% block content %}
<!-- Orders Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-0 jood-dark">Gestion des Commandes</h1>
                <p class="text-muted">Suivi et gestion de toutes les commandes</p>
            </div>
            <div>
                <button class="btn btn-primary me-2">
                    <i class="fas fa-plus"></i> Nouvelle Commande
                </button>
                <button class="btn btn-outline-primary">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-primary-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">42</div>
                        <div class="widget-label">En attente</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-warning-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">18</div>
                        <div class="widget-label">En préparation</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-fire fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-info-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">156</div>
                        <div class="widget-label">Terminées</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-secondary-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">3.420€</div>
                        <div class="widget-label">CA Aujourd'hui</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-euro-sign fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters and Search -->
<div class="card mb-4">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Filtres et Recherche</h4>
            <button class="btn btn-outline-secondary btn-sm" id="toggleFilters">
                <i class="fas fa-filter"></i> Filtres
            </button>
        </div>
    </div>
    <div class="card-body" id="filtersPanel">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Recherche</label>
                <input type="text" class="form-control" placeholder="N° commande, client...">
            </div>
            <div class="col-md-2">
                <label class="form-label">Statut</label>
                <select class="form-select">
                    <option value="">Tous</option>
                    <option value="pending">En attente</option>
                    <option value="preparing">En préparation</option>
                    <option value="ready">Prête</option>
                    <option value="completed">Terminée</option>
                    <option value="cancelled">Annulée</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Date</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-md-2">
                <label class="form-label">Type</label>
                <select class="form-select">
                    <option value="">Tous</option>
                    <option value="delivery">Livraison</option>
                    <option value="pickup">À emporter</option>
                    <option value="dine_in">Sur place</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary">
                        <i class="fas fa-search"></i> Rechercher
                    </button>
                    <button class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Reset
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Orders Table -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Liste des Commandes</h4>
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">Affichage:</span>
                <select class="form-select form-select-sm" style="width: auto;">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">
                            <input type="checkbox" class="form-check-input">
                        </th>
                        <th>N° Commande</th>
                        <th>Client</th>
                        <th>Date/Heure</th>
                        <th>Type</th>
                        <th>Montant</th>
                        <th>Statut</th>
                        <th>Actions</th>
