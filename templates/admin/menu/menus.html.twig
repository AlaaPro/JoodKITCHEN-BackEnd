{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filter menus by category
    const tabButtons = document.querySelectorAll('#menuTabs button[data-bs-toggle="tab"]');
    tabButtons.forEach(button => {
        button.addEventListener('shown.bs.tab', function(event) {
            const targetTab = event.target.getAttribute('data-bs-target');
            console.log('Switched to tab:', targetTab);
            // Here you would filter the menus based on category
        });
    });
    
    // Menu creation form
    document.querySelector('#addMenuModal .btn-primary').addEventListener('click', function() {
        const form = document.getElementById('addMenuForm');
        const formData = new FormData(form);
        
        // Show loading state
        this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Création...';
        this.disabled = true;
        
        // Simulate menu creation
        setTimeout(() => {
            this.innerHTML = '<i class="fas fa-check"></i> Menu créé!';
            setTimeout(() => {
                bootstrap.Modal.getInstance(document.getElementById('addMenuModal')).hide();
                this.innerHTML = '<i class="fas fa-save"></i> Créer le menu';
                this.disabled = false;
                form.reset();
                
                // Show success notification
                showNotification('Menu créé avec succès!', 'success');
            }, 1500);
        }, 2000);
    });
    
    function showNotification(message, type) {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type} position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        toast.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                ${message}
                <button type="button" class="btn-close ms-auto" onclick="this.parentElement.parentElement.remove()"></button>
            </div>
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => {
            if (toast.parentElement) {
                toast.remove();
            }
        }, 5000);
    }
});
</script>
