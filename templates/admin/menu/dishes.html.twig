{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // View toggle functionality
    const gridViewBtn = document.getElementById('gridViewBtn');
    const listViewBtn = document.getElementById('listViewBtn');
    const gridView = document.getElementById('gridView');
    const listView = document.getElementById('listView');
    
    gridViewBtn.addEventListener('click', function() {
        gridView.classList.remove('d-none');
        listView.classList.add('d-none');
        gridViewBtn.classList.add('active');
        listViewBtn.classList.remove('active');
    });
    
    listViewBtn.addEventListener('click', function() {
        listView.classList.remove('d-none');
        gridView.classList.add('d-none');
        listViewBtn.classList.add('active');
        gridViewBtn.classList.remove('active');
    });
    
    // Set default active view
    gridViewBtn.classList.add('active');
    
    // Filter functionality
    const categoryFilter = document.getElementById('categoryFilter');
    const statusFilter = document.getElementById('statusFilter');
    const searchInput = document.getElementById('searchInput');
    const clearFilters = document.getElementById('clearFilters');
    
    function filterDishes() {
        const dishes = document.querySelectorAll('.dish-card');
        const categoryValue = categoryFilter.value;
        const statusValue = statusFilter.value;
        const searchValue = searchInput.value.toLowerCase();
        
        dishes.forEach(dish => {
            let show = true;
            
            // Category filter
            if (categoryValue && dish.dataset.category !== categoryValue) {
                show = false;
            }
            
            // Status filter
            if (statusValue && dish.dataset.status !== statusValue) {
                show = false;
            }
            
            // Search filter
            if (searchValue) {
                const dishName = dish.querySelector('.card-title').textContent.toLowerCase();
                if (!dishName.includes(searchValue)) {
                    show = false;
                }
            }
            
            dish.style.display = show ? 'block' : 'none';
        });
    }
    
    categoryFilter.addEventListener('change', filterDishes);
    statusFilter.addEventListener('change', filterDishes);
    searchInput.addEventListener('input', filterDishes);
    
    clearFilters.addEventListener('click', function() {
        categoryFilter.value = '';
        statusFilter.value = '';
        searchInput.value = '';
        filterDishes();
    });
    
    // Dish creation form
    document.querySelector('#addDishModal .btn-primary').addEventListener('click', function() {
        const form = document.getElementById('addDishForm');
        const formData = new FormData(form);
        
        // Show loading state
        this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Création...';
        this.disabled = true;
        
        // Simulate dish creation
        setTimeout(() => {
            this.innerHTML = '<i class="fas fa-check"></i> Plat créé!';
            setTimeout(() => {
                bootstrap.Modal.getInstance(document.getElementById('addDishModal')).hide();
                this.innerHTML = '<i class="fas fa-save"></i> Créer le plat';
                this.disabled = false;
                form.reset();
                
                // Show success notification
                showNotification('Plat créé avec succès!', 'success');
            }, 1500);
        }, 2000);
    });
    
    function showNotification(message, type) {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type} position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        toast.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                ${message}
                <button type="button" class="btn-close ms-auto" onclick="this.parentElement.parentElement.remove()"></button>
            </div>
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => {
            if (toast.parentElement) {
                toast.remove();
            }
        }, 5000);
    }
});
</script>
